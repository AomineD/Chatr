<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Remove <selector> wehn you are using <layer-list> -->
    <item android:id="@android:id/background">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#00e5ff"
                android:startColor="#00b2cc"
                android:type="linear" />

        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip >
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">


                <gradient
                    android:angle="0"
                    android:endColor="#9d46ff"
                    android:startColor="#ffffff"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>