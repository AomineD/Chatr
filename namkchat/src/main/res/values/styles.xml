<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/Tolbar</item>


        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>


    </style>

    <style name="serchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Tolbar" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#FFFFFF</item>
    </style>

    <style name="Toolbarsito" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbarsito2" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarMain" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="trans" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>



</resources>
